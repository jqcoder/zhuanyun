        </view>
        <view class="line">
            <text>货物属性</text>
            <text>普通货物</text>
        </view>
        <view class="line">
            <text>转运费</text>
            <text>￥138.00</text>
        </view>
        <view class="line">
            <text>附加费</text>
            <text>￥38.00</text>
        </view>
        <view class="line">
            <text>丢失险</text>
            <text>￥0.00</text>
        </view>
        <view class="line">
            <text>关税险</text>
            <text>￥28.00</text>
        </view>
        <view class="coupon line" bindtap="handleCouponClick">
            <view class="left">
