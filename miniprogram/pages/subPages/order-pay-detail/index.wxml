</view>

<!-- 选择优惠券 -->
<van-popup show="{{ isOpenCoupon }}" round closeable bind:close="onCloseCoupon" position="bottom" custom-style="height: 65%">
    <view class="selectCoupon">
        <view class="coupon-title">选择优惠券</view>
        <scroll-view scroll-y class="coupon-scroll">
            <van-radio-group value="{{ couponRadio }}" bind:change="onSelectCouponChange">
                <block wx:for="{{6}}" wx:key="*this">
                    <view class="coupon-item">
                        <view class="coupon-info">
                            <view>红杉资本优惠券</view>
                            <view class="data">永久有效 · 所有课程可用</view>
                        </view>
                        <view class="coupon-price">
                            <view class="price">-￥2000.00</view>
                        </view>
                        <view class="coupon-isUse">
                            <van-radio name="{{index}}"></van-radio>
                        </view>
                    </view>
                </block>
            </van-radio-group>
            <view class="coupon-item">
                        <view class="coupon-info">
                            <view>不使用优惠券</view>
                        </view>
                        <view class="coupon-isUse">
                            <van-checkbox value="{{ isUseCoupon }}" bind:change="handleUseConponChange"></van-checkbox>
                        </view>
                    </view>
        </scroll-view>
        <view class="btn-g">
            <view class="isUse" bindtap="handleAffirmConponClick">确认使用</view>
        </view>
    </view>

</van-popup>

