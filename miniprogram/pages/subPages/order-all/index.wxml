        </view>
    </view>

    <view class="line">
        <view class="content">
            <view class="first">2</view>
            <view class="title">待入仓</view>
            <view class="bigNum">6</view>
        </view>
        <view class="node">
            <view class="children">
                <view class="left-title">待拣货</view>
                <view class="num">6</view>
            </view>
            <view class="children">
                <view class="left-title">待打包</view>
                <view class="num">6</view>
            </view>
        </view>
    </view>

    <view class="line">
        <view class="content">
            <view class="first">3</view>
            <view class="title">待出仓</view>
            <view class="bigNum">7</view>
        </view>
        <view class="node">
            <view class="children">
                <view class="left-title">未付款</view>
                <view class="num">3</view>
            </view>
            <view class="children">
                <view class="left-title">已付款</view>
                <view class="num">4</view>
            </view>
            <view class="children">
                <view class="left-title">打包中</view>
                <view class="num">7</view>
            </view>
            <view class="children">
                <view class="left-title">打包完成</view>
                <view class="num">7</view>
