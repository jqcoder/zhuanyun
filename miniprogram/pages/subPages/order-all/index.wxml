    </view>

     <view class="line">
        <view class="content">
            <view class="first">4</view>
            <view class="title">待收货</view>
            <view class="bigNum">8</view>
        </view>
        <view class="node">
            <view class="children">
                <view class="left-title">转运中</view>
                <view class="num">8</view>
            </view>
        </view>
    </view>
    
</view>