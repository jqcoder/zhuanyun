<!--pages/subPages/awaitWriteOrder/index.wxml-->
<view class="page">
    <view class="address">
        <view class="address-item">
            <view class="icon-left flex-c-c">
                <van-icon color="#fff" name="location-o" />
            </view>
            <view class="addressInfo">
                <view class="header">
                    <view class="name">新希望仓库</view>
                    <view>18688880130</view>
                    <view class="copy">复制</view>
                </view>
                <view class="addressDetail">
                    <text>深圳市龙华区龙华街道工业路壹城环智中心C座2607室</text>
                </view>
            </view>
        </view>
        <view class="address-item">
            <view class="icon-left two flex-c-c">
                <image class="icon" mode="widthFix" src="../../../assets/images/cityicon.png"></image>
            </view>
            <view class="addressInfo">
                <view class="header">
                    <view class="name">KK Chen</view>
                    <view>18688880130</view>
                </view>
                <view class="addressDetail">
                    <text>MEGASYSTEMS INC 799 E DRAGRAM SUITE 5A
                        TUCSON, AZ 85705 USA</text>
                </view>
            </view>
        </view>
    </view>

    <view class="form">
        <view class="tip">
            <van-icon size="26rpx" color="#E7691D" name="warning-o" /><text class="text">快递全部到齐点击确认打包后，订单不可修改</text>
        </view>
        <view class="form-content">
            <view class="num">
                <view class="label">
                    <image class="imagetoicon" src="../../../assets/images/fanxing.png"></image> 快递个数
                </view>
                <van-field class="ipt" bind:change="listenNumIptChange" disabled="{{NumIptDisabled}}" value="{{ number ? number : '' }}" placeholder="{{numPlaceholder}}" error="{{!isNum}}" type="number" border="{{false}}" placeholder-style="font-size: 22rpx;" bind:blur="listenNumIptBlur" />
            </view>
            <van-field class="textarea" border="{{false}}" type="textarea" placeholder-style="font-size: 24rpx;" placeholder="备注信息，例如：去掉包装盒等" bind:change="onChange" />
        </view>
        <view class="num-list">
            <block wx:if="{{number}}" wx:key="*this">
                <block wx:for="{{number}}" wx:key="*this">
                    <view class="num-item">
                        <view class="num-label">{{index+1}}. </view>
                        <input class="ipt" bindinput="handleIptItemValChange" data-index="{{index}}" type="text" value="{{orderList[index-0]}}" />
                        <van-icon class="icon" bind:click="handleDelectClick" data-index="{{index}}" placeholder="请输入快递单号" color="#999999" size="36rpx" name="delete-o" />
                    </view>
                </block>
                <view class="addOrder-c">
                    <view class="btn" bindtap="handleAppendOrder">
                        <van-icon name="plus" />
                        <text>补充快递单号</text>
                    </view>
                </view>
            </block>
        </view>
    </view>

    <view class="orderInfo">
        <view class="item">
            <text>订单号：20220509140712345678</text>
            <text class="copy">复制</text>
        </view>
        <view class="item">
            <text>转运线路：中国 - 美国</text>
        </view>
        <view class="item">
            <text>预选渠道：普通货物</text>
        </view>
        <view class="item">
            <text>订单状态：<text class="status">待填写</text></text>
        </view>
        <view class="item">
            <text>下单时间：2022-05-09 14:07:12</text>
        </view>
    </view>

    <view class="operate">
        <view class="btn customService">联系客服</view>
        <view class="btn cancel" bindtap="handleCancelClick">取消订单</view>
    </view>
</view>


<van-dialog id="van-dialog" />