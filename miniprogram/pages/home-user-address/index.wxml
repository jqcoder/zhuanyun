<!--pages/home-user-address/index.wxml-->
<block wx:if="{{!addressList.length}}">
    <view class="empty">
        <my-empty text="亲，你还没有添加地址信息喔~"></my-empty>
    </view>
</block>
<block wx:else>
    <view class="page">
        <block wx:for="{{addressList}}" wx:key="id">
            <address-item isDefault="{{item.isDefault}}"
                        addressInfo="{{item}}"
                        bind:InfoClick="handleInfoclick"
                        bind:setDefaultAddress="listenSetDefaultClick"
                        bind:deleteAddress="listenDeleteClick">
            </address-item>
        </block>
    </view>
</block>
<van-button color="#e36a26" custom-style="width:352rpx; height: 72rpx;" block bindtap="handleAddAddressClick">添加地址</van-button>
<van-dialog id="van-dialog" />