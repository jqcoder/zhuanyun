<!--components/order-card/index.wxml-->
<view class="orderInfo">
    <view class="item">
        <text>订单号：20220509140712345678</text>
        <text class="copy" bindtap="handleCopyClick">复制</text>
    </view>
    <view class="item">
        <!-- <text>转运线路：中国 - 美国</text> -->
        <text>转运线路：{{begin}} - {{end}}</text>
    </view>
    <view class="item">
        <!-- <text>预选渠道：普通货物</text> -->
        <text>预选渠道：{{method}}</text>
    </view>

    <view class="item">
        <block wx:if="{{orderState == 0}}">
            <text>订单状态：<text class="status tianxie">待填写</text></text>
        </block>
        <block wx:if="{{orderState == 1}}">
            <text>订单状态：<text class="status rucang">待入仓</text></text>
        </block>
        <block wx:if="{{orderState == 2}}">
            <text>订单状态：<text class="status jianhuo">待拣货</text></text>
        </block>
    </view>
    <block wx:if="{{orderState == 3}}">
        <view class="item">
            <text>订单状态：<text class="status rucang">待出仓</text></text>
        </view>
        <view class="item">
            <text>支付状态：<text class="status weizhifu">待支付</text></text>
        </view>
    </block>

    <view class="item">
        <text>下单时间：2022-05-09 14:07:12</text>
        <!-- <text>下单时间：{{}}</text> -->
    </view>
    <block wx:if="{{orderState == 2}}">
        <view class="item">
            <text>入仓时间：2022-05-09 14:07:12</text>
        </view>
    </block>
</view>