<!--components/order-item/index.wxml-->
<view class="order-item">
    <view class="header">
        <view class="orderNum">订单号：20220509140712345678</view>
        <view class="copy" bindtap="handleCopyClick">复制</view>
    </view>
    <view class="to-from">
        <view class="to">中国</view>
        <view class="center">
            <image class="image" mode="widthFix" src="../../assets/images/feijizi.png"></image>
            <text class="text">待入仓</text>
        </view>
        <view class="from" bindtap="handleSelectCountry">美国</view>
    </view>
    <view class="btn-list">
        <view class="btn goPay">去支付</view>
        <view class="btn yesBale">确认打包</view>
        <view class="btn logistics-detail">物流详情</view>
        <view class="btn detail">详情</view>
    </view>
</view>